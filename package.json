{
  "name": "server",
  "version": "1.0.0",
  "description": "Rideit web application",
  "main": "app.js",
  "scripts": {
    "client": "npm run start --prefix client",
    "server": "nodemon app.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "start": "node app.js",
    "test": "mocha --timeout 30000 ./test/**/*.js --exit",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "engines": {
    "node": "12.14.0"
  },
  "author": "Velislav Kunev",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "concurrently": "^6.2.0",
    "dotenv": "^10.0.0",
    "gql-tag": "^1.0.1",
    "graphql": "^15.5.1",
    "graphql-tag": "^2.12.4",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-cors": "^0.0.16",
    "koa-graphql": "^0.8.0",
    "koa-logger": "^3.2.1",
    "koa-mongo": "^1.9.3",
    "koa-mongoose": "^2.0.0",
    "koa-mount": "^4.0.0",
    "koa-router": "^10.0.0",
    "koa-static": "^5.0.0",
    "mocha": "^9.0.1",
    "mongolass": "^4.4.7",
    "mongoose": "^5.12.14",
    "node-cron": "^3.0.0",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3"
  }
}
